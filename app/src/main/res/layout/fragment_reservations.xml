<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReservationsFragment"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    >

    <TextView
        android:id="@+id/res_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/create_a_reservation"
        android:textSize="30sp"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Date from"
        android:textColor="?attr/textcolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/res_getdate"
        app:layout_constraintEnd_toEndOf="@+id/res_getdate"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/res_getdate" />

    <TextView
        android:id="@+id/res_datetext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Date to"
        android:textColor="?attr/textcolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/res_getdate2"
        app:layout_constraintEnd_toEndOf="@+id/res_getdate2"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="@+id/res_getdate2" />

    <Button
        android:id="@+id/res_getdate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border"
        android:text="@string/pick_date_from"
        android:textColor="?attr/backgroundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/res_getdate2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/blue_border"
        android:text="@string/pick_date_to"
        android:textColor="?attr/backgroundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/res_getdate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/res_getTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border"
        android:text="@string/pick_time_from"
        android:textColor="?attr/backgroundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <Button
        android:id="@+id/res_getTime2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/blue_border"
        android:text="@string/pick_time_to"
        android:textColor="?attr/backgroundcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/res_getTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />

    <TextView
        android:id="@+id/res_timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Time from"
        android:textColor="?attr/textcolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/res_getTime"
        app:layout_constraintEnd_toEndOf="@+id/res_getTime"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="@+id/res_getTime" />

    <TextView
        android:id="@+id/res_timetext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Time to"
        android:textColor="?attr/textcolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/res_getTime2"
        app:layout_constraintEnd_toEndOf="@+id/res_getTime2"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/res_getTime2" />

    <Button
        android:id="@+id/res_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="52dp"
        android:text="@string/submit"
        android:textColor="?attr/backgroundcolor"
        android:background="@drawable/blue_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/res_parkspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toTopOf="@+id/res_spotspinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="?attr/backgroundcolor"
        app:layout_constraintVertical_bias="0.921"
        android:background="?attr/spineri"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

    <Spinner
        android:id="@+id/res_spotspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="192dp"
        app:layout_constraintBottom_toTopOf="@+id/res_getdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/backgroundcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:spinnerMode="dropdown"
        android:background="?attr/spineri"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>